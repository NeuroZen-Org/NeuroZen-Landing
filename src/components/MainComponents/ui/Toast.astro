---
interface Props {
  message: string;
  subtitle?: string;
  type?: "success" | "error" | "info";
}

const { message, subtitle, type = "success" } = Astro.props;

const bgColorClass =
  type === "success"
    ? "bg-green-600"
    : type === "error"
      ? "bg-red-600"
      : "bg-blue-600";

const textColorClass =
  type === "success"
    ? "text-green-100"
    : type === "error"
      ? "text-red-100"
      : "text-blue-100";
---

<div
  id="toast"
  class="fixed top-4 left-1/2 -translate-x-1/2 z-50 opacity-0 pointer-events-none transition-all duration-300 transform -translate-y-full"
>
  <div
    class={`${bgColorClass} text-white px-6 py-4 rounded-lg shadow-2xl flex items-center gap-3 min-w-[320px]`}
  >
    {
      type === "success" && (
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6 flex-shrink-0"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
      )
    }
    {
      type === "error" && (
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6 flex-shrink-0"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
      )
    }
    {
      type === "info" && (
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6 flex-shrink-0"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
      )
    }
    <div>
      <p class="font-semibold">{message}</p>
      {subtitle && <p class={`text-sm ${textColorClass}`}>{subtitle}</p>}
    </div>
  </div>
</div>
