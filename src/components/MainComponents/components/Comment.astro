---
import type { Comment } from "@/types/comment";

interface Props {
  comment: Comment;
}

const { comment } = Astro.props;

// Generar las estrellas segÃºn el rating
const stars = Array.from({ length: 5 }, (_, i) => i < comment.rating);
---

<div
  class="comment-card bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 h-full flex flex-col justify-between min-h-[320px]"
>
  <!-- Rating -->
  <div class="flex gap-1 mb-4">
    {
      stars.map((filled) => (
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class={`w-5 h-5 ${filled ? "text-yellow-400" : "text-gray-300"}`}
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
        </svg>
      ))
    }
  </div>

  <!-- Comentario -->
  <blockquote class="flex-1 mb-6">
    <p class="text-gray-700 leading-relaxed text-lg italic">
      "{comment.comment}"
    </p>
  </blockquote>

  <!-- Autor -->
  <div class="flex items-center gap-4 pt-4 border-t border-gray-100">
    <div
      class="w-14 h-14 rounded-full bg-gradient-to-br from-green-400 to-emerald-600 flex items-center justify-center text-white font-bold text-xl shadow-md"
    >
      {comment.name.charAt(0)}
    </div>
    <div class="flex flex-col">
      <h4 class="font-bold text-gray-800 text-lg">{comment.name}</h4>
      <p class="text-sm text-gray-500">{comment.role}</p>
    </div>
  </div>
</div>

<style>
  .comment-card {
    animation: fadeIn 0.6s ease-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>
