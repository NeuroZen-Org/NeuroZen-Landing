---
interface Props {
  title: string;
  description: string;
  srcLink: string;
}

const { title, description, srcLink } = Astro.props;
---

<div class="flex flex-col gap-4">
  <div class="flex flex-col gap-2">
    <h3>{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
  </div>
  <video src={srcLink} width="600px" controls></video>
</div>
