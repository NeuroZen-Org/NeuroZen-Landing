---
interface Props {
  hasGreenBg?: boolean;
  styles?: string;
  id?: string;
  title?: string;
  description?: string;
}

const { hasGreenBg, styles, id, title, description } = Astro.props;
---

<section
  id={id}
  class:list={[
    `flex flex-col w-full gap-5 items-center justify-center text-center p-5 ${styles}`,
    hasGreenBg ? "bg-[#E8FAE6]" : "",
  ]}
>
  <div class="flex flex-col max-w-6xl mx-auto px-6 text-center gap-4">
    {title && <h2>{title}</h2>}
    {
      description && (
        <p class="text-gray-600 max-w-2xl mx-auto mb-6">{description}</p>
      )
    }
  </div>
  <slot />
</section>
