---
import type { Psychologist } from "@/types/Psychologist";
import { formatPsychologistName } from "@/helpers/formatPsychologistName";

interface Props {
  psychologist: Psychologist;
}

const { psychologist } = Astro.props;

const psychologistName = formatPsychologistName(psychologist);
const imageAlt = `Foto ${psychologistName}`;
---

<div class="flex gap-5 items-center">
  <img
    class="rounded-full w-[160px] h-[80px] object-contain"
    src={psychologist.img}
    alt={imageAlt}
  />
  <div class="flex flex-col gap-2 text-start">
    <h3 class="font-bold">{psychologistName}</h3>
    <p>{psychologist.description}</p>
  </div>
</div>
