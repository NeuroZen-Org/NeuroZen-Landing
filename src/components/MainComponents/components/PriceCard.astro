---
interface Props {
  name: string;
  subtitle: string;
  price: string;
  features: string[];
  isAdvanced?: boolean;
}

const { features, name, price, subtitle, isAdvanced } = Astro.props;
---

<div
  class:list={[
    "bg-white rounded-2xl shadow-sm p-8 flex flex-col",
    isAdvanced ? "border border-black" : "",
  ]}
>
  <h3 class="text-2xl font-semibold text-green-600 mb-2">{name}</h3>
  <p class="text-gray-600 mb-4">{subtitle}</p>
  <p class="text-3xl font-bold text-gray-800 mb-6">{price}</p>

  <ul class="text-left space-y-2 mb-8 text-gray-600">
    {features.map((feature) => <li>✔️ {feature}</li>)}
  </ul>
  <button
    class="mt-auto px-6 py-2.5 bg-gradient-to-r from-green-500 to-emerald-600 w-full text-white font-semibold rounded-lg hover:from-green-60 hover:to-emerald-700 transition-all duration-300 shadow-md hover:shadow-lg hover:scale-105 cursor-pointer"
  >
    Get Started
  </button>
</div>
