---
import Link from "../ui/Link.astro";

interface Props {
  name: string;
  subtitle: string;
  price: string;
  features: string[];
  isAdvanced?: boolean;
}

const { features, name, price, subtitle, isAdvanced } = Astro.props;

const purchaseUrl = `https://neurozen-frontend.web.app/subscriptions`;
---

<div
  class:list={[
    "bg-white rounded-2xl shadow-sm p-8 flex flex-col",
    isAdvanced ? "border border-black" : "",
  ]}
>
  <h3>{name}</h3>
  <p class="text-gray-600 mb-4">{subtitle}</p>
  <p class="text-3xl font-bold text-gray-800 mb-6">{price}</p>

  <ul class="text-left space-y-2 mb-8 text-gray-600">
    {features.map((feature) => <li>✔️ {feature}</li>)}
  </ul>
  <Link href={purchaseUrl} text="Obtener plan" styles="mt-auto px-6 py-2.5" />
</div>
