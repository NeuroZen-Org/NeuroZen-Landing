---
import Section from "../components/Section.astro";
import Psychologist from "../components/Psychologist.astro";
import { psychologists } from "@/consts/psychologists";
import Link from "../ui/Link.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section
  id="psicologos"
  title={t("psychologists.section.title")}
  description={t("psychologists.section.description")}
  hasGreenBg
  styles="pt-8 pb-15"
>
  <div class="flex flex-col gap-8 w-full px-4">
    {
      psychologists.map((psychologist, index) => (
        <Psychologist psychologist={psychologist} index={index} />
      ))
    }
  </div>

  <!-- CTA adicional -->
  <div
    class="mt-8 text-center bg-white rounded-2xl p-8 shadow-lg max-w-2xl mx-auto"
  >
    <h3 class="text-2xl font-bold text-gray-800 mb-3">
      {t("psychologists.cta.question")}
    </h3>
    <p class="text-gray-600 mb-6">
      {t("psychologists.cta.help")}
    </p>
    <Link href="#" text={t("psychologists.cta.find")} styles="px-8 py-3" />
  </div>
</Section>
