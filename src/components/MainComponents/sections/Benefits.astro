---
import BeneficiosGif from "@/assets/Gifs/comienzo.gif";
import Section from "../components/Section.astro";
import Benefit from "../components/Benefit.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section
  id="beneficios"
  title={t("benefits.title")}
  description={t("benefits.description")}
>
  <div
    class="flex flex-col gap-10 items-center justify-center px-6 md:px-12 lg:flex-row max-w-7xl mx-auto"
  >
    <!-- Imagen con efecto -->
    <div class="lg:w-1/2 flex justify-center">
      <div class="relative group">
        <div
          class="absolute -inset-1 bg-gradient-to-r from-green-400 to-emerald-600 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-300"
        >
        </div>
        <img
          class="relative object-contain rounded-2xl shadow-2xl max-w-full h-auto"
          src={BeneficiosGif.src}
          alt="Mujer meditando"
        />
      </div>
    </div>

    <!-- Lista de beneficios -->
    <ul class="flex flex-col gap-6 text-start lg:w-1/2">
      <Benefit benefitNumber="1" title={t("benefits.1.title")}>
        <p class="text-gray-700 leading-relaxed">
          {t("benefits.1.description")}
        </p>
      </Benefit>
      <Benefit benefitNumber="2" title={t("benefits.2.title")}>
        <p class="text-gray-700 leading-relaxed">
          {t("benefits.2.description")}
        </p>
      </Benefit>
      <Benefit benefitNumber="3" title={t("benefits.3.title")}>
        <p class="text-gray-700 leading-relaxed">
          {t("benefits.3.description")}
        </p>
      </Benefit>
    </ul>
  </div>
</Section>
