import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="favicon.png" sizes="32x32" type="image/png" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title data-i18n="pageTitle">
      NeuroZen | Gestiona tu estrés y bienestar emocional
    </title>
    <meta
      name="description"
      content="NeuroZen es una plataforma que te ayuda a detectar y reducir el estrés laboral con tests, ejercicios personalizados y acceso a psicólogos calificados."
    />
    <meta
      name="keywords"
      content="estrés, bienestar, salud mental, neurozen, psicología, plataforma, test, relajación, emocional"
    />
    <meta name="author" content="NeuroDraw" />
    <!-- <link rel="stylesheet" href="/src/styles/global.css" /> -->
  </head>

  <body class="overflow-x-hidden font-open-sans">
    <div class="flex flex-col min-w-full min-h-full">
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>
